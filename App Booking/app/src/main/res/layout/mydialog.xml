<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp" android:layout_height="100dp">

    <Button
        android:id="@+id/riprenota"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#00BCD4"
        android:text="Riprenota"
        android:visibility="invisible" />

    <Button
        android:id="@+id/disdetta"
        android:layout_width="131dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#F60000"
        android:text="Rimuovi"
        android:visibility="invisible" />

    <Button
        android:id="@+id/effettuata"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#00F629"
        android:text="Effettuata"
        android:visibility="invisible" />


</RelativeLayout>